<?xml version="1.0" encoding="utf-8"?>
<!-- Large widget layout (4x2+) - Full controls with skip buttons -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- App Icon -->
    <ImageView
        android:id="@+id/widget_app_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="Widdle Reader"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <!-- Text Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Book Title -->
        <TextView
            android:id="@+id/widget_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="No book selected"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Chapter Title -->
        <TextView
            android:id="@+id/widget_chapter_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Tap to open app"
            android:textColor="#B0B0B0"
            android:textSize="13sp" />

    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Skip Back -->
        <ImageButton
            android:id="@+id/widget_skip_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Skip Back"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_media_previous"
            android:tint="#FFFFFF" />

        <!-- Play/Pause -->
        <ImageButton
            android:id="@+id/widget_play_pause"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/widget_button_background"
            android:contentDescription="Play/Pause"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_media_play"
            android:tint="#FFFFFF" />

        <!-- Skip Forward -->
        <ImageButton
            android:id="@+id/widget_skip_forward"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Skip Forward"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_media_next"
            android:tint="#FFFFFF" />

    </LinearLayout>

</LinearLayout>
