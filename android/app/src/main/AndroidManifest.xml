<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network access for online features (if any) -->
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <!-- Required for background audio playback -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    
    <!-- Foreground service permissions for audio playback -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"/>
    
    <!-- Notifications for playback controls (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    
    <!-- Audio file access permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    
    <!-- Optional: Media content control for Android Auto integration -->
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>

    <!-- Declare Android Auto support (phone projection only) -->
    <!-- Note: android.software.leanback is for TV/Auto browsing support -->
    <uses-feature android:name="android.software.leanback" android:required="false"/>

    <application
        android:name="${applicationName}"
        android:label="Widdle Reader"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:allowBackup="true"
        android:appCategory="audio"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <meta-data android:name="io.flutter.embedding.android.NormalTheme" android:resource="@style/NormalTheme"/>
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Android Auto MediaBrowserService -->
        <service
            android:name=".auto.WiddleReaderMediaService"
            android:exported="true"
            android:enabled="true"
            android:foregroundServiceType="mediaPlayback"
            android:label="@string/app_name">
            <!-- Primary intent-filter for Android Auto -->
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService"/>
            </intent-filter>
            <!-- Legacy compatibility intent-filter (some OEMs need this) -->
            <intent-filter>
                <action android:name="android.media.MediaBrowserService"/>
            </intent-filter>
        </service>

        <!-- Media Button Receiver for handling headset and lock screen controls -->
        <receiver android:name="com.ryanheise.audioservice.MediaButtonReceiver"
            android:exported="true" tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <!-- Keep audio_service service WITHOUT MediaBrowser intent filter -->
        <service
            android:name="com.ryanheise.audioservice.AudioService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- CRITICAL: Application-level Android Auto metadata for discovery -->
        <meta-data
            android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc"/>
        
        <!-- Flutter metadata -->
        <meta-data android:name="flutterEmbedding" android:value="2"/>

        <!-- Home Screen Widget -->
        <receiver
            android:name=".AudiobookWidgetProvider"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/audiobook_widget_info" />
        </receiver>
    </application>
</manifest>